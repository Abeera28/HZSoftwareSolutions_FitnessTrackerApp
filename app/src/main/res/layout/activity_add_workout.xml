<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#121212">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="17dp">

    <TextView
        android:text="Add Activity or Workout"
        android:textSize="22sp"
        android:fontFamily="@font/bungee_regular"
        android:letterSpacing="0.05"
        android:textStyle="bold"
        android:textColor="#EDEDED"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Activity Spinner -->

    <!-- Workout Spinner -->
    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:background="@drawable/bg_spinner"
        android:popupBackground="#1E1E1E" />

    <Spinner
        android:id="@+id/spinnerWorkout"
        android:layout_width="374dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_spinner"
        android:popupBackground="#1E1E1E" />

        <EditText
            android:id="@+id/etDuration"
            android:hint="Duration (minutes)"
            android:inputType="number"
            android:textSize="20dp"
            android:textColor="#EDEDED"
            android:textColorHint="#9E9E9E"
            android:backgroundTint="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etSteps"
            android:hint="Steps (auto calculated)"
            android:inputType="number"
            android:textColor="#EDEDED"
            android:textSize="20dp"
            android:textColorHint="#9E9E9E"
            android:backgroundTint="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etCalories"
            android:hint="Calories (auto calculated)"
            android:inputType="number"
            android:textSize="20dp"
            android:textColor="#EDEDED"
            android:textColorHint="#9E9E9E"
            android:backgroundTint="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FBC02D"
        android:text="SAVE"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
